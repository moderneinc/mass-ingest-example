# Example environment variables for runtime credential configuration
# Copy this file to .env and fill in your actual values
# These variables will be used by init-credentials.sh at container startup

# Git Credentials (for HTTPS authentication)
# Format: one credential per line as https://username:token@host
GIT_CREDENTIALS="https://username:token@github.com
https://username:password@gitlab.com"

# SSH Configuration (for SSH authentication) 
# Paste your entire private key including BEGIN/END lines
SSH_PRIVATE_KEY="-----BEGIN RSA PRIVATE KEY-----
YOUR_PRIVATE_KEY_HERE
-----END RSA PRIVATE KEY-----"

# SSH Known Hosts (optional, for SSH authentication)
SSH_KNOWN_HOSTS="github.com ssh-rsa AAAAB3NzaC1yc2E...
gitlab.com ssh-rsa AAAAB3NzaC1yc2E..."

# Set to "false" to disable SSH strict host key checking (use with caution)
SSH_STRICT_HOST_KEY_CHECKING="true"

# Git SSL Verification (set to "false" to disable SSL verification)
GIT_SSL_VERIFY="true"

# Maven Settings XML (complete settings.xml content)
MAVEN_SETTINGS_XML='<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0">
  <servers>
    <server>
      <id>my-repo</id>
      <username>maven-user</username>
      <password>maven-password</password>
    </server>
  </servers>
  <profiles>
    <profile>
      <id>default</id>
      <repositories>
        <repository>
          <id>my-repo</id>
          <url>https://nexus.company.com/repository/maven-releases/</url>
        </repository>
      </repositories>
    </profile>
  </profiles>
  <activeProfiles>
    <activeProfile>default</activeProfile>
  </activeProfiles>
</settings>'

# Maven Security Settings (optional, for encrypted passwords)
MAVEN_SETTINGS_SECURITY_XML='<settingsSecurity>
  <master>{encrypted-master-password}</master>
</settingsSecurity>'

# Gradle Properties
GRADLE_PROPERTIES="moderne.artifactory.username=gradle-user
moderne.artifactory.password=gradle-password
org.gradle.daemon=false
org.gradle.parallel=true"

# Custom CA Certificate (for self-signed certificates)
# Paste your entire certificate including BEGIN/END lines
CUSTOM_CA_CERT="-----BEGIN CERTIFICATE-----
YOUR_CERTIFICATE_HERE
-----END CERTIFICATE-----"

# Configure wget to use custom CA certificate (set to "true" if needed)
CONFIGURE_WGET_CA="false"

# NPM Configuration (optional)
NPM_REGISTRY="https://registry.npmjs.org/"
NPM_AUTH_TOKEN="your-npm-auth-token"

# Python pip Configuration (optional)
PIP_INDEX_URL="https://pypi.org/simple/"
PIP_TRUSTED_HOST="pypi.org"

